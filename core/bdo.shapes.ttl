# baseURI: http://purl.bdrc.io/ontology/core/shapes/
# imports: http://datashapes.org/dash
# imports: http://purl.bdrc.io/ontology/adm/types/Access
# imports: http://purl.bdrc.io/ontology/core/
# prefix: bds

@prefix adm: <http://purl.bdrc.io/ontology/admin/> .
@prefix bdd: <http://purl.bdrc.io/data/> .
@prefix bdo: <http://purl.bdrc.io/ontology/core/> .
@prefix bdr: <http://purl.bdrc.io/resource/> .
@prefix bds: <http://purl.bdrc.io/ontology/core/shapes/> .
@prefix bf: <http://id.loc.gov/ontologies/bibframe/> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix iiif2: <http://iiif.io/api/presentation/2#> .
@prefix iiif3: <http://iiif.io/api/presentation/3#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix swa: <http://topbraid.org/swa#> .
@prefix tbr: <http://purl.bdrc.io/ontology/toberemoved/> .
@prefix tosh: <http://topbraid.org/tosh#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

bds:
  a owl:Ontology ;
  owl:imports <http://datashapes.org/dash> ;
  owl:imports <http://purl.bdrc.io/ontology/adm/types/Access> ;
  owl:imports bdo: ;
  owl:versionInfo "Initial SHACL constraints" ;
.
bds:CorporationMemberShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "CorporationMember shape"@en ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:memberOf ;
      sh:class bdo:Corporation ;
      sh:description "this respource may be a member of a Corporation" ;
      sh:inversePath bdo:hasMember ;
      sh:minCount 0 ;
      sh:name "member of" ;
      sh:nodeKind sh:IRI ;
    ] ;
  sh:targetClass bdo:Person ;
.
bds:CorporationShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "Corporation shape"@en ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasMember ;
      sh:class bdo:CorporationMember ;
      sh:description "this Corporation may have zero or more members" ;
      sh:inversePath bdo:memberOf ;
      sh:minCount 0 ;
      sh:name "has member" ;
      sh:nodeKind sh:IRI ;
    ] ;
  sh:targetClass bdo:Corporation ;
.
bds:EntityShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "Entity shape"@en ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property [
      a sh:PropertyShape ;
      sh:path adm:status ;
      sh:class adm:Status ;
      sh:description "must be exactly one adm:status of value adm:StatusType" ;
      sh:maxCount 1 ;
      sh:minCount 1 ;
      sh:name "status" ;
      sh:nodeKind sh:IRI ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path skos:prefLabel ;
      sh:datatype rdf:langString ;
      sh:description "require unique language from among the listed choices" ;
      sh:languageIn (
          "en"
          "zh"
          "bo"
          "bo-x-ewts"
        ) ;
      sh:minCount 1 ;
      sh:name "pref label"@en ;
      sh:order "1"^^xsd:decimal ;
      sh:uniqueLang true ;
    ] ;
  sh:targetClass bdo:Entity ;
.
bds:InstanceShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "Instance Shape"@en ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:creator ;
      sh:class bdo:AgentAsCreator ;
      sh:description "this Instance may have zero or more creators." ;
      sh:minCount 0 ;
      sh:name "instance has translation" ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:instanceOf ;
      sh:class bdo:Work ;
      sh:description "this Instance is an instance of at least one Work" ;
      sh:inversePath bdo:hasInstance ;
      sh:minCount 1 ;
      sh:name "instance of" ;
    ] ;
  sh:targetClass bdo:Instance ;
.
bds:LabelShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "Label Shape" ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasTranslation ;
      sh:class bdo:Label ;
      sh:description "this Label may have zero or more tanslations" ;
      sh:inversePath bdo:translationOf ;
      sh:minCount 0 ;
      sh:name "label has translation" ;
    ] ;
  sh:targetClass bdo:Label ;
.
bds:SerialInstanceShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "SerialInstance Shape" ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:instanceOf ;
      sh:class bdo:SerialMember ;
      sh:description "this is an instance of a SerialMember" ;
      sh:inversePath bdo:hasInstance ;
      sh:minCount 1 ;
      sh:name "instance of serial" ;
    ] ;
  sh:targetClass bdo:SerialInstance ;
.
bds:SerialMemberShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "SerialMember Shape" ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasInstance ;
      sh:class bdo:Instance ;
      sh:description "this SerialMember may have a SerialInstance" ;
      sh:inversePath bdo:instanceOf ;
      sh:maxCount 1 ;
      sh:minCount 0 ;
      sh:name "has serial instance" ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:memberOf ;
      sh:class bdo:SerialWork ;
      sh:description "this SerialMember is a series member of a SerialWork" ;
      sh:inversePath bdo:hasMember ;
      sh:maxCount 1 ;
      sh:minCount 1 ;
      sh:name "series member" ;
    ] ;
  sh:targetClass bdo:SerialMember ;
.
bds:SerialWorkShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "SerialWork Shape" ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasMember ;
      sh:class bdo:SerialMember ;
      sh:description "this SerialWork has zero or more SerialMembers" ;
      sh:inversePath bdo:memberOf ;
      sh:minCount 0 ;
      sh:name "has series member" ;
    ] ;
  sh:targetClass bdo:SerialWork ;
.
bds:WorkShape
  a rdfs:Class ;
  a sh:NodeShape ;
  rdfs:label "Work shape"@en ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:creator ;
      sh:class bdo:AgentAsCreator ;
      sh:description "this Work may have zero or more creators" ;
      sh:minCount 0 ;
      sh:name "creator" ;
      sh:nodeKind sh:IRI ;
      sh:order "3"^^xsd:decimal ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasInstance ;
      sh:class bdo:Instance ;
      sh:description "this Work may have zero or more Instances" ;
      sh:inversePath bdo:instanceOf ;
      sh:minCount 0 ;
      sh:name "has instance" ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:hasTranslation ;
      sh:class bdo:Work ;
      sh:description "this Work may have zero or more tanslations" ;
      sh:inversePath bdo:translationOf ;
      sh:minCount 0 ;
      sh:name "work has translation" ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:workTitle ;
      sh:class bdo:WorkBibliographicalTitle ;
      sh:description "there must be a single bibliographic title for a work" ;
      sh:maxCount 1 ;
      sh:minCount 1 ;
      sh:name "title" ;
      sh:order "2"^^xsd:decimal ;
    ] ;
  sh:property [
      a sh:PropertyShape ;
      sh:path bdo:workTitle ;
      sh:class bdo:WorkTitle ;
      sh:description "there can be 0 or more bdo:WorkTitle other than bdo:WorkBibliographicTitle" ;
      sh:minCount 0 ;
      sh:name "title" ;
      sh:not [
          a sh:NodeShape ;
          sh:class bdo:WorkBibliographicalTitle ;
        ] ;
      sh:order 2.1 ;
    ] ;
  sh:targetClass bdo:Work ;
.

  a bdo:Transliteration ;
  a skos:Concept ;
  skos:prefLabel "Sanskrit transliterated in Tibetan"@en ;
  skos:topConceptOf bdr:TransliterationScheme ;
.
bdr:TransliterationScheme
  a skos:ConceptScheme ;
  skos:prefLabel "Transliteration Scheme"@en ;
.

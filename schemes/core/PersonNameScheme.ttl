bdo:PersonNameType
  a owl:Class ;
  rdfs:label "Person Name Type"@en ;
  skos:definition "represents the type of a Person Name"@en ;
.
bdr:PersonNameScheme
  a skos:ConceptScheme ;
  skos:prefLabel "Person Name Type Scheme"@en ;
.
PersonNameScheme:
  a owl:Ontology ;
  owl:imports <http://www.w3.org/2004/02/skos/core> ;
  owl:versionInfo "Initial version" ;
.
bdr:PersonNameTypeBodhisattvaVowName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Bodhisattva vow name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name received by the Person upon taking their Bodhisattva vows"@en ;
.
bdr:PersonNameTypeChineseName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Chinese Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  owl:deprecated true ;
  skos:definition "The Person's name as generally known in Chinese traditions"@en ;
.
bdr:PersonNameTypeCommonName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Common Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name by which a Person is commonly known"@en ;
.
bdr:PersonNameTypeCorporateName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Organization Position Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "Name by which a Person is known by virtue of their position within an Organization"@en ;
.
bdr:PersonNameTypeFamilyName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Family Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name of a Person's family. Surname"@en ;
.
bdr:PersonNameTypeFinalOrdinationName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Final Ordination Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name given to a Person upon their receiving final ordination"@en ;
.
bdr:PersonNameTypeFirstOrdinationName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "First Ordination Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name given to a Person upon their receiving first ordination"@en ;
.
bdr:PersonNameTypeGterStonTitle
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Terton Title"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The title bestowed upon a Person who has discovered a terma"@en ;
.
bdr:PersonNameTypeOfficeTitle
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Office Title"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The Title of a Person occupying a given office"@en ;
.
bdr:PersonNameTypeOtherName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Other Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "an otherwise unspecified type of person name"@en ;
.
bdr:PersonNameTypePenName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Pen Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "name used by the author in the colophons of his works"@en ;
.
bdr:PersonNameTypePersonalName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Personal Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The name a Person is known by, typically at birth, independent of offices, seats, and so on"@en ;
.
bdr:PersonNameTypePrimaryName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Primary Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The primary name by which a Person is known"@en ;

.
bdr:PersonNameTypePrimaryTitle
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Primary Title"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "The primary or common title by which a Person is known."@en ;
.
bdr:PersonNameTypeReversal
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "reversed name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "Reverses 'firstname lastname' to 'lastname, firstname'"@en ;
.
bdr:PersonNameTypeSecretInitiatoryName
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Secret Initiatory Name"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "A name bestowed on Person upon receiving certain empowerments"@en ;
.
bdr:PersonNameTypeTitle
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "other title"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "an otherwise unspecified type of person title"@en ;
.
bdr:PersonNameTypeTulkuTitle
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "Tulku Title"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "A title bestowed on a Person who is recognized as a reincarnation of a distinguished Person"@en ;
.
bdr:PersonNameTypeVariantOrthography
  a bdo:PersonNameType ;
  a skos:Concept ;
  skos:prefLabel "variant orthography"@en ;
  skos:topConceptOf bdr:PersonNameScheme ;
  skos:definition "An accepted variant writing of a name"@en ;
.
